{
    "app-id": "org.gabmus.hydrapaper",
    "command": "hydrapaper",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.32",
    "sdk": "org.gnome.Sdk",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--talk-name=org.gnome.SettingsDaemon",
        "--talk-name=org.mate.SettingsDaemon",
        "--filesystem=home:ro",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],
    "modules": [
        {
            "name": "libwnck",
            "cleanup": ["/include", "*.la"],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/libwnck/3.30/libwnck-3.30.0.tar.xz",
                    "sha256": "ac6d0d2646aa80676d3066651e73abb7bff7ed79be238c9b21a0083e2adc3439"
                }
            ]
        },
        {
            "name": "python-pillow",
            "buildsystem": "simple",
            "build-options": {
                "arch": {
                    "i386": {
                        "env": {
                            "MAX_CONCURRENCY": "1"
                        }
                    },
                    "arm": {
                        "env": {
                            "MAX_CONCURRENCY": "1"
                        }
                    }
                }
            },
            "ensure-writable": [
                "/lib/python*/site-packages/easy-install.pth",
                "/lib/python*/site-packages/setuptools.pth",
                "/app/lib/python*/site-packages/easy-install.pth",
                "/app/lib/python*/site-packages/setuptools.pth"
            ],
            "build-commands": [
                "python3 setup.py install --prefix=/app --root=/"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/python-pillow/Pillow/archive/5.4.1.tar.gz",
                    "sha256": "d233c2e63414535281c572d2b4debd7de8a205b341ffc7db0f48f3f4d199fbc0"
                },
                {
                    "type": "shell",
                    "commands": [
                        "sed -i 's/if not platform_/if not dirs/' setup.py"
                    ]
                }
            ]
        },
        {
            "name": "hydrapaper",
            "buildsystem": "meson",
            "builddir": true,
            "config-opts": ["--buildtype=release"],
            "sources": [{
                "type": "archive",
                "url": "https://gitlab.com/gabmus/HydraPaper/-/archive/1.5.2/HydraPaper-1.5.2.tar.gz",
                "sha256": "092b7360cbf8cf0a0fe90455d60771133a45679baf423de3c4d1952001321837"
            }]
        }
    ]
}
